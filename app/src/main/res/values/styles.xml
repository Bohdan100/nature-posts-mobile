<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemPaddingTop">5dp</item>
        <item name="itemPaddingBottom">5dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>

        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemBackground">@null</item>
        <item name="itemRippleColor">@null</item>

        <item name="android:gravity">center_vertical</item>

        <item name="android:textSize">12sp</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="SettingsInputView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textColor">@color/settings_placeholder</item>
        <item name="android:textColorHint">@color/settings_placeholder</item>
        <item name="android:background">@drawable/input_settings_with_border</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>